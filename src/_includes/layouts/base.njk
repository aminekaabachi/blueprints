<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    {% if title == "Home" %}
      <title>{{ site.title }}</title>
    {% elif title %}
      <title>{{ title }} | {{ site.title }}</title>
    {% else %}
      <title>{{ site.title }}</title>
    {% endif %}
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <link rel="shortcut icon" href="/favicon.ico"/>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"/>
    <meta name="apple-mobile-web-app-title" content="{{ site.title }}"/>
    <link rel="manifest" href="/site.webmanifest"/>
    <link rel="stylesheet" href="/css/style.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap"
      rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,opsz,wght@0,18..144,300..900;1,18..144,300..900&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet"/>
  </head>
  <body>
    {{ content | safe }}
    <script>
      // Refresh iframes on window resize
      let resizeTimeout;
      function refreshIframes() {
        const iframes = document.querySelectorAll('iframe');
        iframes.forEach(iframe => {
          const originalSrc = iframe.src;
          if (originalSrc) { // Temporarily remove src to force refresh
            iframe.src = '';
            // Use requestAnimationFrame to ensure the change is processed
            requestAnimationFrame(() => {
              iframe.src = originalSrc;
            });
          }
        });
      }
      function handleResize() { // Clear existing timeout
        clearTimeout(resizeTimeout);
        // Set a new timeout to debounce the resize events
        resizeTimeout = setTimeout(() => {
          refreshIframes();
        }, 250); // Wait 250ms after resize stops
      }
      // Add resize event listener
      window.addEventListener('resize', handleResize);
      // Optional: Also refresh on orientation change for mobile devices
      window.addEventListener('orientationchange', () => {
        setTimeout(refreshIframes, 500); // Delay to allow orientation change to complete
      });
    </script>
    <!-- Collapsable component JavaScript -->
    <script src="/js/collapsable.js"></script>
    <!-- Supabase -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script src="/js/newsletter.js"></script>
  </body>
</html>